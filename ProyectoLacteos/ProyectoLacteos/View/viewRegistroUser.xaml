<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoLacteos.View.viewRegistroUser"
             xmlns:local ="clr-namespace:ProyectoLacteos.ViewModel"
             >

    <ContentPage.BindingContext>
        <local:ViewModelRegistroUser></local:ViewModelRegistroUser>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="30">


            <Label Text="Crear Usuario" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" Margin="0,0,0,20" />

            <Entry  Text="{Binding NombreUsuario}" Placeholder="Nombre completo" Keyboard="Text" Margin="0,0,0,10" />
            <Entry  Text="{Binding Correo}" Placeholder="Ingrese su correo" Keyboard="Email" Margin="0,0,0,10" />
            <Entry  Text="{Binding Telefono }" Placeholder="Numero telefonico" Keyboard="Numeric" Margin="0,0,0,10" />
            <Entry  Text="{Binding  Contrasenia}" Placeholder="Contraseña" IsPassword="True" Margin="0,0,0,20" />
            <Entry  Text="{Binding  ConfirmacionContrasenia}" Placeholder="Confirme Contraseña" IsPassword="True" Margin="0,0,0,20" />


            <Button Command="{Binding crearUsuario}"  Text="Crear" BackgroundColor="#2196F3" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>