<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProyectoLacteos.View.viewDirecciones"
    Title="Direcciones"
    xmlns:local="clr-namespace:ProyectoLacteos.ViewModel"
    >
    <ContentPage.BindingContext>
        <local:ViewModelDireccion></local:ViewModelDireccion>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="10">
            <ListView ItemsSource="{Binding Direcciones}"
                      SelectedItem="{Binding DireccionSeleccionada}"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Direccion}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Dirección:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0" />
            <Entry Placeholder="Ingrese la dirección" Text="{Binding DireccionSeleccionada.direccion}" />
             <Entry Placeholder="Elija la descripcion" Text="{Binding DireccionSeleccionada.descripcion}" />
            <Button Text="Agregar" Command="{Binding AgregarDireccionCommand}" />
            <Button Text="Actualizar" Command="{Binding ActualizarDireccionCommand}" />
            <Button Text="Eliminar" Command="{Binding EliminarDireccionCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


    
