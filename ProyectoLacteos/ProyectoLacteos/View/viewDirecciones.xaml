<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProyectoLacteos.View.viewDirecciones"
    Title="Direcciones"
    xmlns:local="clr-namespace:ProyectoLacteos.ViewModel"
    >
    <ContentPage.BindingContext>
        <local:ViewModelDireccion></local:ViewModelDireccion>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Mis Direcciónes:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0" />

            <Label Text="Ingrese su direccion"></Label>
            <Entry Text="{Binding Direccion}" />
            <Label Text="Ingrese descripcion"></Label>
            <Entry Text="{Binding Descripcion}" />
            <Label Text="Id user"></Label>
            <Entry Text="{Binding }" />

            <Button Text="Agregar" Command="{Binding AgregarDireccionCommand}" />
            <Button Text="Actualizar" Command="{Binding ActualizarDireccionCommand}" />
            <Button Text="Eliminar" Command="{Binding EliminarDireccionCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


    
