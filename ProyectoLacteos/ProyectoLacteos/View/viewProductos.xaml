<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoLacteos.View.viewProductos"
              xmlns:local="clr-namespace:ProyectoLacteos.ViewModel"
             >
    <ContentPage.BindingContext>

        <local:ViewModelProductoCategoria></local:ViewModelProductoCategoria>

    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="30">


            <Label Text="Crear Producto" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" Margin="0,0,0,20" />

            <Entry  Text="{Binding FOTO}" Placeholder="Foto" Keyboard="Url" Margin="0,0,0,10" />
            <Entry  Text="{Binding NOMBRE_PRODUCTO}" Placeholder="Nombre del Producto" Keyboard="Text" Margin="0,0,0,10" />
            <Entry  Text="{Binding UNIDAD_MEDIDA }" Placeholder="Unidad de Medida" Keyboard="Numeric" Margin="0,0,0,10" />
            <Entry  Text="{Binding PRECIO}" Placeholder="Precio" Keyboard="Numeric" Margin="0,0,0,10" />

            <Button Command="{Binding crearProducto}"  Text="Crear Producto" BackgroundColor="#2196F3" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>

    
</ContentPage>